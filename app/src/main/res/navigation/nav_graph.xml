<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.potteryapp.views.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addFormulaFragment"
            app:destination="@id/addFormulaFragment" />
        <action
            android:id="@+id/action_homeFragment_to_formulaDetailFragment"
            app:destination="@id/formulaDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFormulaFragment"
        android:name="com.example.potteryapp.views.AddFormulaFragment"
        android:label="fragment_add_formula"
        tools:layout="@layout/fragment_add_formula" >
        <action
            android:id="@+id/action_addFormulaFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/formulaDetailFragment"
        android:name="com.example.potteryapp.views.FormulaDetailFragment"
        android:label="fragment_formula_detail"
        tools:layout="@layout/fragment_formula_detail">
        <argument
            android:name="formulaId"
            app:argType="integer" />
        <action
            android:id="@+id/action_formulaDetailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>